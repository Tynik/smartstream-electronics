{
  "compilerOptions": {
    "strict": true,
    "lib": ["DOM", "ESNext"],
    "target": "ES2022",
    "module": "ESNext",
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*"
  ]
}
